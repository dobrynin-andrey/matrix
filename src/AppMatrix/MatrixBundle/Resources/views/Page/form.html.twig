{# src/AppMatrix/MatrixBundle/Resources/views/Page/contact.html.twig #}
{% extends 'AppMatrixMatrixBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Form - Matrix</h1>
    </header>

    <p>Import your data in Matrix Application!</p>

    {{ form_start(form, { 'attr': {'class': 'blogger'} }) }}

    {% for label, messages in app.session.flashbag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {{ form_errors(form) }}
    {{ form_row(form.project_id) }}
    {{ form_row(form.parameter_type) }}
    {{ form_row(form.parameter_name) }}
    {{ form_row(form.district_type) }}
    {{ form_row(form.file) }}

    {{ form_rest(form) }}

    <input type="submit" value="Загрузить" />

{% endblock %}

{% block sidebar %}
    <div class="project_sidebar">
        <div class="project_title">Текущий проект</div>
        <div class="project_row">
            <div class="project_name">Имя: </div>
            <div class="project_value"><b>{{ project.projectName }}</b></div>
        </div>
        <div class="project_row">
            <div class="project_name">Дата создания: </div>
            <div class="project_value"><b>{{ project.created|date("d.m.y : H:i", "Asia/Krasnoyarsk") }}</b></div>
        </div>
        <div class="project_row">
            <div class="project_name">Дата изменения: </div>
            <div class="project_value"><b>{{ project.updated|date("d.m.y : H:i", "Asia/Krasnoyarsk") }}</b></div>
        </div>
    </div>
{% endblock %}